.commentMain {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    width: 94%;
    padding: 20rpx 3%;
    border-bottom: 2rpx solid #f5f5f5;
}

.commentTtitle text {
    color: #8b8b8b;
    font-size: 28rpx;
}

.titleLeft {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -ms-flex-direction: row;
    flex-direction: row;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.commentMain image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.titleLeft text {
    width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.commentTtitle {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -ms-flex-direction: row;
    flex-direction: row;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    padding-bottom: 20rpx;
}

.commentMain text:nth-child(2) {
    color: #393939;
}

.commentMain text:nth-child(3) {
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #979797;
}

.commentImg {
    width: 96%;
    padding: 20rpx 0;
}

.commentImg image {
    width: 210rpx!important;
    height: 210rpx!important;
    margin-right: 10rpx;
    border-radius: 0;
}