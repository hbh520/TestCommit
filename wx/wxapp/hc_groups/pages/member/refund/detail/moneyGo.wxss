page {
    background: #f5f5f5;
}

.top {
    width: 94%;
    padding: 20rpx 3%;
    text-align: center;
    font-size: 30rpx;
    color: #B2B2B2;
    background: #fff;
}

.row {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -ms-flex-direction: row;
    flex-direction: row;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    padding: 10rpx 0;
}

.row image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.rowright {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -ms-flex-direction: row;
    flex-direction: row;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.mainDetail {
    border-top: 20rpx solid #f5f5f5;
    background: #fff;
}

.shipping {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -ms-flex-direction: row;
    flex-direction: row;
}

.top view:nth-child(2) {
    color: #131315;
    font-size: 55rpx;
}

.top view:nth-child(1) {
    color: #000;
}

.shippingLeft {
    border-right: 4rpx solid #35C231;
    position: absolute;
    top: 50rpx;
    bottom: -50rpx;
    margin: 0 10%;
}

.shipping image {
    position: absolute;
    top: -4rpx;
    left: -18rpx;
    background: #fff;
}

.shippingRight {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    width: 80%;
    font-size: 30rpx;
    color: #333;
    margin-left: 20%;
}

.shippingRight {
    width: 80%;
    font-size: 30rpx;
    color: #9C9C9C;
    border-bottom: 2rpx solid #f1f1f1;
    padding: 30rpx;
}

.shippingRight text:nth-child(1) {
    font-size: 26rpx;
}

.shippingRight text:nth-child(2) {
    font-size: 24rpx;
}

.shipping image {
    width: 40rpx;
    height: 40rpx;
}

.rightRow {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -ms-flex-direction: row;
    flex-direction: row;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    padding: 10rpx 0;
}